<!--pages/messageDetail/messageDetailPage.wxml-->
<view>
  <view class = "notice">
    <van-notice-bar
     text="阅读后请点击确认按钮"
    />
  </view>
  <view class='msgDetail'>
    <van-cell title="{{infoForm.title}}" value="{{infoForm.time}}" size="large" label="{{infoForm.senderName}}" />
    <van-collapse value="{{ activeNames }}" bind:change="onCollChange">
      <van-collapse-item title="详情" name="1">
        {{infoForm.content}}
      </van-collapse-item>
    </van-collapse>
    <van-field
      value = "{{reply}}"
      rows="1"
      autosize
      label="回复"
      type="textarea"
      placeholder="若必要请输入回复"
      bind:change = "changeReply"
     />
    <view slot="footer" class = "buttons">
        <van-button size="normal" type="danger" bindtap="onCommit">确认收到</van-button>
    </view>
  </view>
</view>
