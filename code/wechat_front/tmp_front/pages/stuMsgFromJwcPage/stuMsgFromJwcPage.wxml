<van-notice-bar
  left-icon="volume-o"
  text="注意：教务处信息每12小时更新一次"
/>
<view>
<van-search
  class="searchBar"
  value="{{searchValue}}"
  placeholder="请输入搜索关键词"
  show-action
  bind:change="searchChange"
  bind:search="onSearch"
  bind:cancel="onCancel"
/>
<view>
  <!-- <van-cell title="选择日期区间" value="{{ date }}" bind:click="onDisplay" />
    <van-calendar
      show="{{ show }}"
      type="range"
      bind:close="onClose"
      bind:confirm="onConfirm"
      min-date="{{ minDate }}"
      max-date="{{ maxDate }}"
      position="right"
      color="skyblue"
    /> -->
</view>

<van-cell-group>
  <view wx:for="{{showMsgs}}" wx:for-item="message">
      <van-cell 
        class="oneJwcMsg"
        label="{{message.releasetime}}" 
        bindtap = "showDetails" data-id = "{{message.id}}"
        is-link
      >
        <view slot="title">
          <view class="van-cell-text">{{message.title}}</view>
          <van-tag color="{{message.ifRead?'green':'red'}}">
            {{message.ifRead?"已读":"未读"}}
          </van-tag>
        </view>
      </van-cell>
  </view>
</van-cell-group>

<text>\n</text>
<text>\n</text>
<text>\n</text>

  <van-tabbar active="{{ active }}" bind:change="onChange">
    <van-tabbar-item icon="comment-o" info = "{{jwcMsgCount}}">教务消息</van-tabbar-item>
    <van-tabbar-item icon="chat-o" info = "{{tutMsgCount}}">导师消息</van-tabbar-item>
    <van-tabbar-item icon="setting-o">设置</van-tabbar-item>
  </van-tabbar>

</view>
