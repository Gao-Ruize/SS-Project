<!--pages/register/register.wxml-->
<view>
  <view class = "titleText">
    注册
  </view>
  <view class = "inputForm">
  <van-cell-group>
    <van-field
      label = "ID"
      value="{{ value }}"
      placeholder="请输入学号/工号"
      border="{{ false }}"
      bind:change="onInput"
    />
  </van-cell-group>
  <van-radio-group value="{{ radio }}" bind:change="onChange">
  <van-cell-group>
    <van-cell title="学生" clickable data-name="1" bind:click="onClick">
      <van-radio slot="right-icon" name="1" />
    </van-cell>
    <van-cell title="导师" clickable data-name="2" bind:click="onClick">
      <van-radio slot="right-icon" name="2" />
    </van-cell>
  </van-cell-group>
 </van-radio-group>
</view>
<view class = "bottomButton">
  <van-button type="info" bindtap="onCommit">确认</van-button>
</view>
</view>