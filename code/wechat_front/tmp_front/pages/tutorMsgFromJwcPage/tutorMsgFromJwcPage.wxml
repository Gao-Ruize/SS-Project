<van-cell-group>
  <view wx:for="{{showMsgs}}" wx:for-item="message">
      <van-cell 
        label="{{message.releasetime}}" 
        bindtap = "showDetails" data-id = "{{message.id}}"
        is-link
      >
        <view slot="title">
          <view class="van-cell-text">{{message.title}}</view>
          <van-tag color="{{message.ifRead?'green':'red'}}">
            {{message.ifRead?"已读":"未读"}}
          </van-tag>
        </view>
      </van-cell>
  </view>
</van-cell-group>


  <van-tabbar active="{{ active }}" bind:change="onChange">
    <van-tabbar-item icon="home-o" info = "{{jwcMsgCount}}">教务处消息</van-tabbar-item>
    <van-tabbar-item icon="search">历史消息列表</van-tabbar-item>
    <van-tabbar-item icon="friends-o">群发消息</van-tabbar-item>
    <van-tabbar-item icon="setting-o">设置</van-tabbar-item>
  </van-tabbar>

