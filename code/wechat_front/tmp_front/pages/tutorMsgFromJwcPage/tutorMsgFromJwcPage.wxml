<!--index.wxml-->
<view>
  <view style="position: -webkit-sticky;">
    <van-search value="{{searchValue}}" placeholder="输入要查询的通知" use-action-slot bind:change="onChange" bind:search="onSearch">
    </van-search>
  </view>

<view>
  <van-cell title="选择日期区间" value="{{ date }}" bind:click="onDisplay" />
    <van-calendar
      show="{{ show }}"
      type="range"
      bind:close="onClose"
      bind:confirm="onConfirm"
      min-date="{{ minDate }}"
      max-date="{{ maxDate }}"
      position="right"
      color="skyblue"
    />
</view>

<text>\n</text>
<text>\n</text>

<van-cell-group>
  <view wx:for="{{allMsgs}}" wx:for-item="message">
      <van-cell 
        label="{{message.releasetime}}" 
        bindtap = "showDetails" data-id = "{{message.id}}"
        is-link
      >
        <view slot="title">
          <view class="van-cell-text">{{message.title}}</view>
          <van-tag color="{{message.ifRead?'green':'red'}}">
            {{message.ifRead?"已读":"未读"}}
          </van-tag>
        </view>
      </van-cell>
  </view>
</van-cell-group>


  <van-tabbar active="{{ active }}" bind:change="onChange">
    <van-tabbar-item icon="home-o">教务处消息</van-tabbar-item>
    <van-tabbar-item icon="search">历史消息列表</van-tabbar-item>
    <van-tabbar-item icon="friends-o">群发消息</van-tabbar-item>
    <van-tabbar-item icon="setting-o">设置</van-tabbar-item>
  </van-tabbar>

</view>
