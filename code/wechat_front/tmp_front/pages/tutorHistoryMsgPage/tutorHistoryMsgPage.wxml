<view>
<van-search
  value="{{ searchValue }}"
  placeholder="通过时间或项目名搜索"
  use-action-slot
  bind:change="searchChange"
  bind:search="onSearch"
  shape = "round"
/>
<view wx:for="{{msgItems}}" wx:for-item="msgItem">
  <van-cell 
    bindtap = "checkDetails" data-id = "{{msgItem.id}}"
    title="{{msgItem.title}}" size="large" label="{{msgItem.date}}"
    value = "查看详情"
    is-link 
  />
</view>
  <van-tabbar active="{{ active }}" bind:change="onChange">
    <van-tabbar-item icon="home-o">教务处消息</van-tabbar-item>
    <van-tabbar-item icon="search">历史消息列表</van-tabbar-item>
    <van-tabbar-item icon="friends-o">群发消息</van-tabbar-item>
    <van-tabbar-item icon="setting-o">设置</van-tabbar-item>
  </van-tabbar>
</view>