<!--pages/message/message.wxml-->
<view>
  <view>
    <text>即将发送给以下几位同学：{{students}}</text>
    <view>
    <van-button round type="info" bindtap="bindOpenTime">
      选择时间
    </van-button>
    </view>
    <text>选择的时间为:{{currentDate}}</text>
    <view>
      <van-cell-group>
      <van-field
        value="{{ value }}"
        placeholder="请输入内容"
        border="{{ false }}"
        bind:change="onChange"
      />
      </van-cell-group>
    </view>
    <view>
      <van-button round type="info" bindtap="bindQuit">
        确认
      </van-button>
      </view>
    </view>
<!--遮罩层：显示timepicker-->
  <van-overlay show="{{ show }}">
    <van-datetime-picker
    show = "{{show}}"
    type="datetime"
    value="{{ currentDate }}"
    min-date="{{ minDate }}"
    max-date="{{ maxDate }}"
    bind:confirm="onTimeConfirm"
    />
  </van-overlay>
</view>